{% block title %}Event{% endblock %}
{% block body %}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
    />

    <!-- Bootstrap icons -->
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <tr>
        <td>
            <a href="{{ path('app_event_index') }}">
            <button  class="btn btn-outline-primary">


                <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
            Back To List</button></a>
        </td>


        <h1>{{ event.title }}</h1>


    <table class="table">
        <tbody>
             <th> <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path('app_event_edit', {'id': event.id}) }}">


