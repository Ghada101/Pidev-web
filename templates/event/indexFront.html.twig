{% extends 'FrontOffice/frontfinal.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

<html class="no-js" lang="zxx">



<body>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--[if lte IE 9]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
        <![endif]-->



    <!-- bradcam_area  -->
    <div class="bradcam_area bradcam_bg_2">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text text-center">
                        <h3>Destinations</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ bradcam_area  -->




    <div class="popular_places_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    {% include 'search/filter_form.html.twig' with {form:form} only %}
                </div>

                <div class="col-lg-8">
                    <div class="d-flex justify-content-end mb-2">
                        <button class="btn btn-warning" width="5">{{ knp_pagination_sortable(events,'price','e.price') }}
                        </button>

                    <button class="btn btn-warning" width="5">{{ knp_pagination_sortable(events,'Aa','e.title') }}
                        </button></div>



                    <div class="row">
                        {% for event in events %}
                            <tr>


                            <div class="col-lg-6 col-md-6">
                                <div class="single_place">
                                    <div class="thumb">
                                        {%if event.image is null%}
                                            <img src="{{ asset('uploads/'~'EventDefault.jpeg') }}" alt="">
                                        {%else%}
                                            <img src="{{ asset('/uploads/'~event.image) }} " alt="" width="150">
                                        {%endif%}
                                        <a href="#" class="prise">{{ event.price }}</a>
                                    </div>
                                    <div class="place_info">
                                        <a href="{{ path('app_event_show_front', {'id': event.id}) }}"><h3>{{ event.title }}</h3></a>
                                        <p><strong>#{{ event.category }}</strong></p>
{#                                        <p>{{ event.venue.venueName }}</p>#}
                                        <div class="rating_days d-flex justify-content-between">
                                        <span class="d-flex justify-content-center align-items-center">
                                             <i class="fa fa-star"></i>
                                             <i class="fa fa-star"></i>
                                             <i class="fa fa-star"></i>
                                             <i class="fa fa-star"></i>
                                             <i class="fa fa-star"></i>
                                             <a href="#">(20 Review)</a>
                                        </span>
                                            <div class="days">
                                                <i class="fa fa-clock-o"></i>
                                                <a href="#">{{ event.Duration }}Days</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="more_place_btn text-center">
                                <div>
                                    {{ knp_pagination_render(events) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>






