{% extends 'backend.html.twig' %}


{% block title %}Event index{% endblock %}

{% block body %}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
    />

    <!-- Bootstrap icons -->
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />


    <table class="table">
        <thead>
            <tr>

                <th>Title</th>
                <th>EventDate</th>
                <th style="width: 50px">Event Image</th>
                <th>Duration</th>
                <th>Category</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>

                <td>{{ event.title }}</td>
                <td>{{ event.EventDate ? event.EventDate|date('Y-m-d H:i:s') : '' }}</td>
                <td ><img src="{{ asset('/uploads/'~event.image) }} " alt="" width="150"></td>
                <td>{{ event.Duration }}</td>
                <td >{{ event.category }}</td>
                <td>{{ event.Description }}</td>
                <td>{{ event.price }}</td>
                <td>
                    <li class="list-inline-item">
                        <a href="{{ path('app_event_show', {'id': event.id}) }}">
                            <button type="button" class="btn btn-info btn-rounded">Info</button>

                        </a>
                    </li>
                </td>
                <td>
                    <li class="list-inline-item">
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}">

                            <button type="button" class="btn btn-danger btn-floating">
                                <i class="fas fa-magic"></i>
                            </button>
                        </a>
                    </li>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">
        <button type="button" class="btn btn-success">Create New Event</button> </a>
{% endblock %}
