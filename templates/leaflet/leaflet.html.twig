    <title>Leaflet Geoproject</title>

    <style>

        #map {

            width: 100%;

            height: 700px;

        }

    </style>

</head>

<body>

<div id="map"></div>
<button onclick="fullScreenView()">view full screen</button>
<div class="coordinate"></div>
</body>

</html>


<script>

    // map class initialize

    var map = L.map('map').setView([38.8610, 71.2761], 7);
    map.zoomControl.setPosition('topright');

    // adding osm tilelayer.

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="https://openstreetmap.org/copyright">OpenStreetMap contributors</a>'
    }).addTo(map);

    //Addming marker in the center of map



    //add map scale

    L.control.scale({position:'bottomright'}).addTo(map)

    ////full screen view
    var mapId = document.getElementById('map');

    function fullScreenView(){
        mapId.requestFullscreen();
    }
    ///map coordinate display
    var marker = null;
    map.on('click',function onMapClick(e) {
        if (marker !=null){
            marker.removeFrom(map);
        }
        marker = new L.Marker(e.latlng, {draggable:true}).addTo(map);

        marker.bindPopup("<b>Hello world!</b><br />I am a popup.").openPopup();

    })



</script>