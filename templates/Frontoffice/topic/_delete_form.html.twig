<form method="post" action="{{ path('app_topic_delete', {'topicId': topic.topicId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.topicId) }}">
    <button class="button rounded-bottom border-danger primary-bg text-white w-100 btn_1 boxed-btn " >Delete</button>
</form>
