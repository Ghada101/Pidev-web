{% extends 'BackOffice/basebackFinal.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td>
            <img class="img-profile rounded-circle"
                 src="{{ asset('/profil/'~app.user.image)}}"alt="" width="150" height="150">
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>

        <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ user.type }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ban</th>
                <td>{{ user.ban ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-5 text-center"><a class="btn btn-outline-primary profile-button  btn-lg" href="{{ path('app_user_index') }}">Back to the users list</a></div>


{#    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>#}

