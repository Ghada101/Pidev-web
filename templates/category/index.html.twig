
{% extends 'BackOffice/baseback.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <!-- Page Heading -->
        <a class="btn btn-info mb-4"  href="{{ path('dashboard') }}" style="margin-left:90%">Dashboard</a>
        <a class="btn btn-info mb-4"  href="{{ path('app_category_new') }}" style="margin-left:90%">Create new</a>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

      <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Category</h6>
            </div>
      <div>
        <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
            <img src="https://img.icons8.com/nolan/344/google-web-search.png
" style="width:50px;height:50px;"/></a>

     </div>

                <div class="card-body">
                
                    <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <table class="table">
        <thead>
            <tr>
                <th>Idcategory</th>
                <th>NameCategory</th>
                <th>DescriptionCategory</th>
                <th>show</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        <tbody id="myTable">
        {% for category in categories %}
            <tr>
                <td>{{ category.idcategory }}</td>
                <td>{{ category.nameCategory }}</td>
                <td>{{ category.descriptionCategory }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_category_show', {'idcategory': category.idcategory}) }}">show</a>
                </td>
                <td>   
                 <a class="btn btn-warning" href="{{ path('app_category_edit', {'idcategory': category.idcategory}) }}">edit</a>
                </td>
                <td>
                     <a class="btn btn-danger" href="{{ path('app_category_delete', {'idcategory': category.idcategory}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tbody id="search">
    </table>
</div>
        </div>
    </div>  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        (document).ready(function(){
            ("#myInput").on("keyup", function() {
                var value = (this).val().toLowerCase()
                ("#myTable tr").filter(function() {
                    (this).toggle((this).text().toLowerCase().indexOf(value) > -1)
                })
            })
        })
    </script>
{% endblock %}
